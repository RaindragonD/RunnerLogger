/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 300rpx;
  height: 200rpx;
  margin: 20rpx;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.input{
	height: 25px;
	width: 190px;
	margin: 5px;
	border: 1px solid lightgray;
	font-size: 15px;
	background-color: white;
	color:black;
  padding: 5px;
}

.picker-text{
  color: "{{tipColor}}";
  font-size: 100%;
  vertical-align: center;
  line-height: 30px;
}

.button{
  height: 35px;
  margin: 5px;
  width: 200px;
  font-size: 15px;
  align-self: center;
  font-weight: bold;
}

.tip{
  margin: 20px;
  font-size: 20px;
}

.container{
	background-color: #EDEDED;
}
