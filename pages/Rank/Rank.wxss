/* pages/index/Component/FormM/FormM.wxss */
wx-button {
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
wx-label {
  display: block;
  margin-top: 10rpx;
}
.picker-text {
  margin-left: 20rpx;
  position: relative;
}
.lineView{
  margin-top: 1px;
  margin-left: 80px;
  margin-right: 80px; 
  height: 1px;
  background-color: darkred;
}
.picker{
  padding: 26rpx;
  background-color: #FFFFFF;
}

.table{
  border-style: solid;
  border-width: 4rpx;
  margin-right: 20rpx;
  margin-left: 20rpx;
  border-color: lightgray;
}

.tr{
  display: flex;
  width: 100%;
  justify-content: center;
  height: 3rem;
  align-items: center;
}

.tr:nth-child(odd){
	background:#F4F4F4;
}

.td{
  width: 40%;
  justify-content: center;
  text-align: center;
}

.td:nth-child(even){
	color:#C00;
}

.tr:nth-child(1){
	background-color: #1E90FF;
}

.th{
  width: 40%;
  color:white;
  display: inline-block;
  text-align: center;
  font-weight: bold;
}

.bg-header{
  background: lightskyblue;
}

body{
	background-color:#EDEDED;
}

#title{
	justify-content: center;
	font-size: 25px;
}

	